<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:paddingTop="0dp"
    android:paddingBottom="5dp"
    android:paddingHorizontal="2dp">


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingTop="2dp"
        android:src="@drawable/account_circle"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Reynald Tan Alex"
        android:textColor="@color/purple_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/bold_font"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image" />

    <TextView
        android:id="@+id/age_gender"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/right_border_only"
        android:text="Age : 20  Female"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:paddingLeft="5dp"
        android:fontFamily="@font/bold_font"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toStartOf="@id/status_indicator"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/patient_name"
        app:layout_constraintTop_toBottomOf="@id/patient_name" />

    <TextView
        android:id="@+id/heart_rate"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold_font"
        android:paddingLeft="4dp"
        android:textColor="@color/black"
        android:paddingTop="2dp"
        android:text="Heart rate 95 Bpm"
        android:textSize="12sp"
        android:paddingBottom="2dp"
        android:background="@drawable/right_border_only"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toEndOf="@+id/age_gender"
        app:layout_constraintTop_toBottomOf="@+id/patient_name" />

    <TextView
        android:id="@+id/blood_pressure"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold_font"
        android:paddingLeft="2dp"
        android:layout_marginTop="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Blood Pressure 110/115"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/heart_rate"
        app:layout_constraintTop_toBottomOf="@+id/status_indicator" />

    <TextView
        android:id="@+id/status_indicator"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_status_bg"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:text="Danger"
        android:textColor="@android:color/white"

        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/patient_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="34dp"
        android:layout_height="30dp"


        android:layout_marginTop="16dp"
        android:src="@drawable/_p"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toEndOf="@+id/blood_pressure"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/request_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/regular_font"
        android:paddingHorizontal="5dp"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toEndOf="@+id/blood_pressure"
        app:layout_constraintTop_toBottomOf="@+id/chat_icon" />

    <View
        android:id="@+id/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/purple_light"
        android:paddingTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/blood_pressure"
        tools:layout_editor_absoluteX="10dp" />


    <!-- Tambahkan loading overlay di bawah sini -->

</androidx.constraintlayout.widget.ConstraintLayout>
