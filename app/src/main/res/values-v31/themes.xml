    <style name="Base.Theme.SyncUp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna dasar tema -->
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/purple_dark</item>
        <item name="android:colorBackground">@color/white</item>

        <!-- DISABLING Android 12 Splash -->
