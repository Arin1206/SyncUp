<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_light"/> <!-- Warna saat ditekan -->
            <stroke android:color="@color/white" android:width="1dp"/>
            <corners android:radius="5dp"/> <!-- Radius sudut -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_light"/> <!-- Warna default -->
            <stroke android:color="@color/purple_light" android:width="1dp"/>
            <padding android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp"/>
            <corners android:radius="10dp"/> <!-- Radius sudut -->
        </shape>
    </item>
</selector>
