<resources>
    <style name="TabTextAppearance" >
        <item name="fontFamily">@font/bold_font</item> <!-- Ganti sesuai nama font -->
        <item name="android:textSize">16sp</item> <!-- Atur ukuran teks -->
        <item name="android:textColor">@color/tab_text_color_selector</item> <!-- Selector warna teks -->
    </style>
    <style name="SpinnerStyle">
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
    </style>
    <style name="BottomNavActiveText">
        <item name="android:textSize">12sp</item> <!-- Ukuran teks -->
        <item name="android:textColor">@color/purple_dark</item> <!-- Warna saat dipilih -->
    </style>

    <style name="BottomNavInactiveText">
        <item name="android:textSize">10sp</item> <!-- Ukuran teks -->
        <item name="android:textColor">@color/black</item> <!-- Warna saat tidak dipilih -->
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/bold_font</item>
        <item name="android:textSize">12sp</item>
    </style>



</resources>